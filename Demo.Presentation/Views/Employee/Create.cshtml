
@model EmployeeViewModel 
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-items-center flex-column">
	<h1 class="col-6 my-4">Create New Employee</h1>
	<br />
	<br />

	@* action="/Employee/Create" method="post" => asp-action="Create" *@
	<form method="post" asp-controller="Employee" asp-action="Create" class="row col-6" enctype="multipart/form-data">

		<div asp-validation-summary="ModelOnly"></div>
		<partial name="PartialView/CreateEditEmployeePartialView"/>
		<div class="form-group col-6">
			<label class="col-form-label" asp-for="Image"></label>
			<input asp-for="Image" class="form-control" />
			<span asp-validation-for="Image" class="text-danger"></span>
		</div>
		<div class="mt-4">
			<input type="submit" value="Create" class="btn btn-primary" /> |
			<a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
		</div>


	</form>

</div>
