@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-items-center flex-column">
	<h1 class="col-6 my-4">Edit User</h1>
	<br />
	<br />
	<form asp-controller="Role" asp-action="Edit" class="row col-6" asp-route-id="@Model.Id">

		<div asp-validation-summary="ModelOnly"></div>
		<div class="form-group col-6">
			<label class="form-label" asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />

			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
			<h3>Assgin Users To Roles </h3>
			<div class="form-group">
			@for(int i = 0; i < Model.Users.Count; i++)
			{
			<div class="form-check">
				<input type="hidden" asp-for="@Model.Users[i].UserId"/>
					<input type="hidden" asp-for="@Model.Users[i].UserName" />
				<input asp-for="@Model.Users[i].IsSelected" class="form-check-input"/>
					<label class="form-check-label">@Model.Users[i].UserName</label>
			</div>
			}
		</div>
		<div class="mt-4">
			<input type="submit" value="Edit" class="btn btn-success" />
			<a asp-action="Index" class="btn btn-light">Cancel</a>
		</div>


	</form>

</div>

